<%= form_for @things, url: user_things_path do |f| %>
<%= f.text_field :name, placeholder:"name of thing spotted" %>
<% raw = Category.all %>
<% categories = [] %>
<% raw.map {|r| categories << r.name } %>
<%= f.select :category, options_for_select(categories), {}, placeholder:"category"%>
<%= f.text_field :currency, placeholder:"currency" %>
<%= f.number_field :price, placeholder:"price" %>
<%= f.text_field :unit, placeholder:"unit" %>
<%= f.text_field :vendor, placeholder:"vendor" %>
<%= f.text_field :address, placeholder:"address" %>
<%= f.text_field :city, placeholder:"city" %>
<%= f.text_field :state, placeholder:"state" %>
<%= f.text_field :country, placeholder:"country" %>
<%= f.number_field :longitude, placeholder:"longitude" %>
<%= f.number_field :latitude, placeholder:"latitude" %>
<%= f.submit "Post" %>
<% end  %>

<% if flash.present? %>
<div class="well">
  <%= flash.notice %>
</div>
<% end %>

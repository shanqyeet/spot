
<div class="container">

  <!-- Javascript way to return back to the previous page -->
    <button onclick="goBack()" class="btn btn-warning">Go Back</button>
    <script>
      function goBack() {
        window.history.back();
      }
    </script>

<!-- the rest of the page -->

  <h1 class="text-center">Spot A New Price</h1>
  <div class="new-thing-form col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
  <% if flash.present? %>
  <div class="well">
    <%= flash.notice %>
  </div>
  <% end %>
  <%= form_for @things, url: user_things_path do |f| %>
  <div class="form-group">
  <%= f.text_field :name, placeholder:"name of thing spotted", class:"form-control" %>
  </div>
  <div class="form-group">
    <% raw = Category.all %>
    <% categories = [] %>
    <% raw.map {|r| categories << r.name } %>
    <%= f.select :category, options_for_select(categories), {}, placeholder:"category", class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_field :currency, placeholder:"currency", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.number_field :price, placeholder:"price", step:0.01, class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.text_field :unit, placeholder:"unit", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.text_field :vendor, placeholder:"vendor", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.text_field :address, placeholder:"address", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.text_field :city, placeholder:"city", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.text_field :state, placeholder:"state", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.text_field :country, placeholder:"country", class:"form-control" %>

  </div>
  <div class="form-group">
    <%= f.submit "Post", class:"btn btn-lg btn-danger form-control" %>
  </div>
  <% end  %>
  </div>
</div>

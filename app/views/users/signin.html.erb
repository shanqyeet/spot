
<div class="container">
  <% if flash.present? %>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4 alert well">
      <%= flash.notice %>
    </div>
  </div>
    <% end %>
  <h2 class="text-center">Sign In</h2>
  <div class="login-form col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4" id="login-form">
    <%= form_tag login_path, html:{id:"login-form"} do %>
    <div class="form-group">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email], class:"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %><br />
      <%= password_field_tag :password, params[:password], class:"form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :remember_me, class:"checkbox inline" do %>
      <%= check_box_tag :remember_me %>
      <span>Remember me on this computer</span>
      <% end %>
    </div>
    <div class="form-group"><%= submit_tag "Log In", class:"btn btn-primary" %></div>
    <% end %>
    <div><%= link_to raw('<i class="fa fa-facebook-official" aria-hidden="true"></i> Log in with Facebook'), "/auth/facebook", class:"btn social-login" %></div>
  </div>
</div>

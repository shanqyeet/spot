<div class="container">
  <h2 class="text-center">Edit Profile</h2>
  <div class="signup-form col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4" id="signup-form">
    <%= form_for @user, url:user_path, method: :put do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <%= f.text_field :gender, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :country %>
      <%= f.text_field :country, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Create", class:"btn btn-primary" %>
    </div>
    <% end %>
    <div class="col-md-4"><%= link_to raw('<i class="fa fa-facebook-official" aria-hidden="true"></i> Sign up with Facebook'), "/auth/facebook", class:"btn social-login" %></div>
  </div>
</div>
